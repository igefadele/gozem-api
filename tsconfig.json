{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    /* "target": "ESNext",                          
    "module": "ESNext",                         
    "moduleResolution": "node",   */              
    "outDir": "./dist",                        
    "rootDir": "./src",                        
    "strict": true,                            
    "esModuleInterop": true,                   
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true  
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
