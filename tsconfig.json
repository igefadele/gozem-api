{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",            
    "outDir": "./dist",                        
    "rootDir": "./src",                        
    "strict": true,                            
    "esModuleInterop": true,                   
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true  
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*", ".DEVDOCS/app.js", ".DEVDOCS/app2.js", ".DEVDOCS/app3.js"],
  "exclude": ["node_modules"]
}
